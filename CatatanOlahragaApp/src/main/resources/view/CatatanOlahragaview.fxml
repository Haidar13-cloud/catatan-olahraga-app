<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.catatanolahragaapp.controller.CatatanOlahragaController">
   <children>
      <DatePicker fx:id="dpTanggal" layoutX="100.0" layoutY="50.0" prefWidth="150.0" />
      <ComboBox fx:id="cbJenisOlahraga" layoutX="300.0" layoutY="50.0" prefWidth="150.0" promptText="Pilih Jenis" />
      <Spinner fx:id="spDurasi" layoutX="500.0" layoutY="50.0" prefWidth="80.0" />
      <Label layoutX="100.0" layoutY="30.0" text="Tanggal" />
      <Label layoutX="300.0" layoutY="30.0" text="Jenis Olahraga" />
      <Label layoutX="500.0" layoutY="30.0" text="Durasi (menit)" />
      <TableView fx:id="tvCatatan" layoutX="50.0" layoutY="120.0" prefHeight="300.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="colTanggal" prefWidth="150.0" text="Tanggal" />
          <TableColumn fx:id="colJenisOlahraga" prefWidth="200.0" text="Jenis Olahraga" />
          <TableColumn fx:id="colDurasi" prefWidth="100.0" text="Durasi (menit)" />
        </columns>
      </TableView>
      <Button layoutX="200.0" layoutY="450.0" mnemonicParsing="false" onAction="#handleAddCatatan" prefHeight="25.0" prefWidth="76.0" text="Tambah" />
      <Button layoutX="300.0" layoutY="450.0" mnemonicParsing="false" onAction="#handleEditCatatan" prefHeight="25.0" prefWidth="76.0" text="Edit" />
      <Button layoutX="400.0" layoutY="450.0" mnemonicParsing="false" onAction="#handleDeleteCatatan" prefHeight="25.0" prefWidth="76.0" text="Hapus" />
   </children>
</AnchorPane>
